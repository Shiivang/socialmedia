<%-include("partials/header") %>

<%-include("partials/nav") %>

<div class="w-[100%] text-3xl font-bold text-black ml-14  text-center">
  <div class="absolute right-32 text-left top-20">
    <h4>Profile Setting</h4>
    <a  class="text-xl" href="/reset-password/<%=user._id%>">Reset Password</a> <br>
    <a  class="text-xl" href="/delete-profile/<%=user._id%>">Delete Profile</a><br>
    <a  class="text-xl " href="/logout">Logout</a>
    
  </div>
</div>
<div class=" h-[100vh] w-full bg-[url('https://images.unsplash.com/photo-1562577309-4932fdd64cd1?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8c29jaWFsJTIwbWVkaWF8ZW58MHx8MHx8fDA%3D')] bg-no-repeat bg-cover bg-center py-36 pl-[37%] ">
<div class="h-90 w-[50%] py-[4%] mt-[-9%] w-70 backdrop-blur-[50px] bg-white/0.001 rounded-3xl pl-[4%]"> 

<div class=" w-[85%] flex flex-col items-center">

<form class="form-image hidden" action="/image/<%= user._id %>" method="post" enctype="multipart/form-data">
<input  class="input-image" type="file" name="profilepic" >

</form>

  <img class="preview-image h-[100px] w-[100px] rounded-full object-cover" src="/images/<%= user.profilepic %>" alt="">

  <h1 class="text-black text-[3vw] font-bold drop-shadow-[10px 10px 10px rgba(0,0,0,0.25)]"> <%= user.name %>
    <h1 class="text-black text-[1vw] font-bold drop-shadow-[10px 10px 10px rgba(0,0,0,0.25)]"> @<%= user.email %>

  </h1><br>
</div>

  <form action="/update-user/<%= user._id%>" method="post" >

    <input class="p-3 ml-8 w-[75%] border border-zinc-100 rounded-xl" type="text" placeholder="full name" name="name" value="<%= user.name %>"> <br> <br>
    <input class="p-3 ml-8 w-[75%] border border-zinc-100 rounded-xl" type="text" placeholder="username" name="username" value="<%= user.username%>"> <br> <br>
    <input class="p-3 ml-8 w-[75%] border border-zinc-100 rounded-xl" type="email" placeholder="email@service.com" name="email" value="<%= user.email%>"> <br><br>

  <button class="mt-5 text-center block w-[40%] ml-32 hover:bg-red-600 rounded text-white py-3 px-5 bg-blue-950">update</button>
  </form>
 
<p class="mt-3 w-[100%] text-left ml-10 ">Already have an account? <a class="text-red-600 font-semibold text-[1.2vw] " href="/login">login</a>
</p>
</div> 
</div>
<script>
const inputimage =document.querySelector(".input-image")
const previewimage =document.querySelector(".preview-image")
const formimage = document.querySelector(".form-image")

previewimage.addEventListener("click",function(){
  inputimage.click()
})

inputimage.addEventListener("change" , function(){
  formimage.submit()
})
</script>


<%-include("partials/footer") %>




