<%-include("partials/header") %>
    <%-include("partials/nav") %>


        <div class=" bg-red-100 w-[80%] rounded-xl  flex flex-wrap py-[10%] m-auto">
            <% user.posts.forEach((post)=>{ %>

                <div class="card w-[23%] mr-5 mb-5">
                    <div class="flex items-center mb-2">
                        <img class="w-[7vh] h-[7vh] rounded-full object-cover" src="/images/<%=  user.profilepic %>"
                            alt="">     
                        <div class="ml-3">

                            <h1 class="text-xl font-bold">
                                <%= user.name %>
                            </h1>
                            <small class="text-black">
                                <%= post.createdAt.toLocaleTimeString() %>
                                <%= post.createdAt.toLocaleDateString() %>
                            </small>
                        </div>
                    </div>
                    <img class="w-full h-[40vh]  object-cover" src="/images/<%= post.media %>" alt="">
                    <div class="text-2xl flex justify-between mt-1">
                        <!-- <i class="ri-heart-3-line"></i> -->
                        <div class="text-2xl flex gap-3">
                            <span class="text-md">
                                <%= post.likes.length%>
                            </span>
                            <a href="/like/<%= post._id%>">
                               <% if(post.likes.includes(user._id)){ %>
                                    <i class="text-red-600 ri-heart-3-fill"></i>
                              <% }else{ %>
                                    <i class=" ri-heart-3-line"></i>

                               <% } %>
                            </a>

                        </div>
                      <div class="text-2xl">
                        <a href="/update-post/<%= post._id%>" class="text-blue-300 ri-edit-box-line"></a>
                        <a href="/delete-post/<%= post._id%>" class="text-red-300 ri-delete-bin-4-line"></a>
                      </div>
                    </div>
                </div>

                <% }) %>
        </div>

        <div
            class=" flex justify-around items-center rounded-xl fixed left-[50%] bottom-[5%] translate-x-[-50%] w-[30%] py-3  bg-red-300 text-2xl text-white">
            <i class="ri-search-line"></i>

            <a href="/post-create" class="ri-add-large-line"></a>
            <a href="/update-user/<%= user._id%>">
                <img class="w-[40px] h-[40px] rounded-full" src="/images/<%= user.profilepic %>" alt="">
            </a>
        </div>
        <%-include("partials/footer") %>


